<ContentDialog
    x:Class="Rosseti.ContentDialog1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Rosseti"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Новое поручение"
    PrimaryButtonClick="ContentDialog_PrimaryButtonClick"
    >

    <Grid Width="401" Margin="0,0,0,39" Height="402">
        <ComboBox x:Name="EmployerChoose" Margin="0,266,0,0" Width="349" HorizontalAlignment="Center" Height="41"/>
        <TextBox x:Name="Task" Margin="26,107,26,0" Text="TextBox" TextWrapping="Wrap" Height="133" VerticalAlignment="Top"/>
        <Button x:Name="AddTask" Content="Добавить" Margin="0,0,26,29" VerticalAlignment="Bottom" HorizontalAlignment="Right" Height="41" Width="154"/>
        <ComboBox x:Name="PlaceWorkChoose" Margin="0,42,0,0" Width="349" HorizontalAlignment="Center" Height="41"/>
        <Button x:Name="Cancel" Content="Отмена" Margin="0,0,220,29" VerticalAlignment="Bottom" HorizontalAlignment="Right" Height="41" Width="154" Click="Cancel_Click"/>
    </Grid>
</ContentDialog>
